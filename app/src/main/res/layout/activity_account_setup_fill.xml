<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    tools:context=".ui.Account_Setup_Fill">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="0dp">

        <!-- زر الرجوع -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circular_button_1"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"/>

        <!-- زر تخطي -->


        <Button
            android:id="@+id/skipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#dfdfdf"
            android:text="Skip"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            app:layout_constraintEnd_margin="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_margin="37dp"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill your information"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="below "
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_marginStart="10dp"/>
    <!-- نص توضيحي -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can edit this later on your account setting."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ico_user"
        android:layout_gravity="center"
        android:contentDescription="@string/user_image" />


    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />

    <!-- حقل إدخال رقم الهاتف -->
    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />

    <Button
        android:id="@+id/finishButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Finish"
        android:textColor="@android:color/white"
        android:background="@drawable/social_button_background"
        />
</LinearLayout>