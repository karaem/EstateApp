<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.Support_Screen">

    <ImageButton
        android:id="@+id/Skip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_margin="15dp"
        android:src="@drawable/backe_1"
        android:background="@drawable/circular_button_1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextButton"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- عنوان الصفحة -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQ &amp; Support"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#003057" />

    <!-- نص توضيحي -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find answer to your problem using this app."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Visit our website"
        android:gravity="start"
        android:textSize="18dp"
        android:drawableLeft="@drawable/web5"
        android:drawablePadding="8dp"
        android:textColor="#003057"
        android:background="?attr/selectableItemBackground" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email us"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/email1"
        android:gravity="start"
        android:textSize="18dp"
        android:textColor="@color/dark_Cyan"
        android:background="?attr/selectableItemBackground" />
    />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms of service"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/info"
        android:gravity="start"
        android:textSize="18dp"
        android:textColor="@color/dark_Cyan"
        android:background="?attr/selectableItemBackground" />
    />

    <!-- حقل البحث -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="         Try find 'how to'"
            android:padding="12dp"
            android:background="@color/lk700"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingEnd="48dp"/> <!-- إضافة مساحة لليمين للأيقونة -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:padding="12dp"/>
     </RelativeLayout>


    <!-- زر الاختيار -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buyer_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buyer"
            android:background="@drawable/button_background_selected"
            android:textColor="#003057" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/estate_agent_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Estate Agent"
            android:background="@drawable/button_background_normal"
            android:textColor="#003057" />
    </LinearLayout>
    <!-- قسم الأسئلة -->

    <!-- سؤال 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="start">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="What is Rise Real Estate?"
            android:textSize="16sp"
            android:textColor="#003057"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:paddingEnd="8dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add"
        android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- سؤال 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="start">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Why choose buy in Rise?"
            android:textSize="16sp"
            android:textColor="#003057"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:paddingEnd="8dp"/>

         <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove4"
         android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- محتوى الأسئلة -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"/>
</LinearLayout>