<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">




    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find best place \nto stay in good price"
        android:textColor="#204d6c"
        android:textSize="25sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="124dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur \nadipiscing elit, sed."
        android:textColor="#292929"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="24dp" />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#dfdfdf"
        android:text="Skip"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_margin="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="37dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="52dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="19dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rectangleImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/onbording_pic1"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.6" />

    <Button
    android:id="@+id/nextButton"
    android:layout_width="233dp"
    android:layout_height="54dp"
    android:text="Next"
    android:textColor="#FFFFFF"
    android:textSize="16sp"
    android:backgroundTint="#8bc83f"
    app:layout_constraintTop_toBottomOf="@id/rectangleImage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
     />

    <ImageView
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:progressDrawable="@drawable/white_progress"
        app:layout_constraintTop_toTopOf="@id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="10dp" />










</androidx.constraintlayout.widget.ConstraintLayout>