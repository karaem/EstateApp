<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="100dp"
    android:height="5dp"
    android:viewportWidth="100"
    android:viewportHeight="5">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/>  <!-- لون الخلفية -->
            <corners android:radius="5dp"/>     <!-- زوايا مدورة -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#3B82F6"/>  <!-- لون شريط التقدم -->
                <corners android:radius="5dp"/>     <!-- زوايا مدورة -->
            </shape>
        </clip>
    </item>
</layer-list>